@model RealEstateApp.Web.Models.PropertyModel
@{
    ViewBag.Title = "Create property";
}

<div class="row justify-content-center">
    <h2>@ViewBag.Title</h2>
</div>
@using (Html.BeginForm("Create", "Property", null, FormMethod.Get))
{
    <div class="text-danger">
        @Html.ValidationSummary(true)
    </div>

    <div class="row justify-content-center">
        <div class="col-log-12">
            <div class="mb-3">
                @Html.LabelFor(x => x.Reference, new { @class = "form-label" })
                @Html.TextBoxFor(x => x.Reference, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Reference, null, new { @class = "text-danger small" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(x => x.Name, new { @class = "form-label" })
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Name, null, new { @class = "text-danger small" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(x => x.Price, new { @class = "form-label" })
                @Html.TextBoxFor(x => x.Price, new { type = "number", @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Price, null, new { @class = "text-danger small" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(x => x.Owner, new { @class = "form-label" })
                @Html.DropDownListFor(x => x.OwnerId, Model.Owners, "Choose an owner", new { @class = "form-select" })
                @Html.ValidationMessageFor(x => x.OwnerId, null, new { @class = "text-danger small" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(x => x.Description, new { @class = "form-label" })
                @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Description, null, new { @class = "text-danger small" })
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-success justify-content-center" style="width:50%">
                    <i class="glyphicon glyphicon-save"></i>Save
                </button>
            </div>

        </div>
    </div>
}